ul.list-group
  display block
li.list-group-item
  padding 0
  font-size 1rem
  background-color #9dcbff
  border-color #4b9fff
  color #333
  transition background-color 300ms ease-out
  height 30px
  white-space nowrap
  &:hover
    background-color #4b9fff
  &.active, &.active:hover
    background-color #4B84FF;
  .list-group-item-heading
    cursor default
    display inline-block
    padding 5px
    margin 0
    border-left none
    width 30px
    min-width 10px
    @media screen and (max-width: 870px)
      width 15px
      padding-left 1px
      padding-right 1px
    @media screen and (max-width: 767px)
      width 30px
  span
    font-size 1.3em
    width calc(50% - 15px)
    min-width 40px
    cursor pointer
    display inline-block
    height 100%
    padding 5px
    border-left 1px solid #ccc
    text-align center
    @media screen and (max-width: 870px)
      width 40px
    @media screen and (max-width: 767px)
      width calc(50% - 15px)
      min-width 40px
    &.active
      background-color rgb(0, 110, 255)